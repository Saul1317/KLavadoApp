<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Klavado</item>
        <item name="colorPrimaryDark">@color/Klavado</item>
        <item name="colorAccent">@color/Klavado</item>
    </style>

    <style name="pantalla_completa" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/Klavado</item>
        <item name="colorPrimaryDark">@color/Klavado</item>
        <item name="colorAccent">@color/Klavado</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="boton_menu_KLavado" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/Klavado</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="checkBoxKLavado" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/Klavado</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="pantalla_menu_principal" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/Klavado</item>
        <item name="colorPrimaryDark">@color/Klavado</item>
        <item name="colorAccent">@color/Klavado</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>
