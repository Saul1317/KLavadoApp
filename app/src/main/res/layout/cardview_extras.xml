<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_nombre_extra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:text="@string/txt_niveles_aire"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/txt_size_extras"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/txt_precio_extras"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="@string/txt_gratis"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/txt_size_secundario"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/checkbox_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/checkBoxKLavado"/>

</LinearLayout>