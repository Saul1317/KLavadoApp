<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TipoLavado.View.Activity.TipoLavado">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fragment_tipo_lavado"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="center_horizontal|bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_ecologia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="Ecologico"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:textSize="@dimen/txt_size_primario"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_tipo_lavado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:theme="@style/switch_tipo_lavado"/>

            <TextView
                android:id="@+id/txt_premium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:textSize="@dimen/txt_size_primario"/>

        </LinearLayout>
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>