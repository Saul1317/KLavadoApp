<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    tools:context=".Finalizado.View.FinalizacionServicio">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Klavado">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center"
                android:src="@drawable/lavado911"/>
        </FrameLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="10dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="16dp"
                            android:src="@drawable/logo_icono_lavado_911"/>
                    </FrameLayout>
                    <android.support.v7.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp"
                        app:columnCount="3"
                        app:useDefaultMargins="true">

                        <TextView
                            android:id="@+id/fecha_actual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2018-12-14"
                            android:textColor="@color/secondary_text"
                            android:textStyle="bold"
                            android:textSize="@dimen/txt_size_secundario"
                            app:layout_columnSpan="3"
                            app:layout_gravity="end"/>

                        <TextView
                            android:id="@+id/hora_actual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12:00 AM"
                            android:textColor="@color/secondary_text"
                            android:textStyle="bold"
                            android:textSize="@dimen/txt_size_secundario"
                            app:layout_columnSpan="3"
                            app:layout_gravity="end"/>

                        <TextView
                            android:id="@+id/txt_nombre_usuario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SaÃºl Alejandro Delgado Mayorga"
                            android:textColor="@color/primary_text"
                            android:textStyle="bold"
                            android:textSize="@dimen/txt_size_primario"
                            app:layout_columnSpan="3"/>

                        <TextView
                            android:id="@+id/txt_telefono_usuario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3337270664"
                            android:textColor="@color/secondary_text"
                            android:textStyle="bold"
                            android:textSize="@dimen/txt_size_secundario"
                            app:layout_columnSpan="3"/>

                        <TextView
                            android:id="@+id/txt_fecha_servicio_usuario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Programado para el dia 18/05/2019"
                            android:textColor="@color/secondary_text"
                            android:textStyle="bold"
                            android:textSize="@dimen/txt_size_secundario"
                            app:layout_columnSpan="3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Domicilio"
                            android:textColor="@color/Klavado"
                            android:textStyle="bold"
                            android:textSize="@dimen/txt_size_secundario"
                            app:layout_columnSpan="3"/>

                        <TextView
                            android:id="@+id/txt_direccion_usuario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cortijo de San Agustin"
                            android:textColor="@color/secondary_text"
                            android:textStyle="bold"
                            android:textSize="@dimen/txt_size_secundario"
                            app:layout_columnSpan="3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Servicio"
                            android:textColor="@color/Klavado"
                            android:textStyle="bold"
                            android:textSize="@dimen/txt_size_secundario"
                            app:layout_columnSpan="3"/>

                        <TextView
                            android:id="@+id/txt_servicio_usuario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Solo exterior"
                            android:textColor="@color/secondary_text"
                            android:textStyle="bold"
                            android:textSize="@dimen/txt_size_secundario"
                            app:layout_columnSpan="1"/>

                        <TextView
                            android:id="@+id/txt_precio_servicio_usuario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$30"
                            android:textColor="@color/secondary_text"
                            android:textStyle="bold"
                            android:textSize="@dimen/txt_size_secundario"
                            app:layout_columnSpan="2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Extras"
                            android:textColor="@color/Klavado"
                            android:textStyle="bold"
                            android:textSize="@dimen/txt_size_secundario"
                            app:layout_columnSpan="3"/>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_total_extras"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_columnSpan="3">

                        </android.support.v7.widget.RecyclerView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divider"
                            app:layout_columnSpan="3"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            app:layout_columnSpan="3">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:text="Costo total"
                                android:textColor="@color/secondary_text"
                                android:textStyle="bold"
                                android:textSize="@dimen/txt_size_secundario"
                                app:layout_columnSpan="1"/>

                            <TextView
                                android:id="@+id/txt_precio_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$30"
                                android:textColor="@color/secondary_text"
                                android:textStyle="bold"
                                android:textSize="@dimen/txt_size_secundario"
                                app:layout_columnSpan="1"/>

                        </LinearLayout>

                    </android.support.v7.widget.GridLayout>
                </android.support.v7.widget.CardView>
                <Button
                    android:id="@+id/btn_finalizar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_button"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="16dp"
                    android:text="Finalizar"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:theme="@style/boton_menu_KLavado"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>